.list{
  width: 100%;
  padding: 0 30rpx;
}
.list-item{
  width: 100%;
  height: 120rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F1F1F1;
  align-items: center;
  box-sizing: content-box;
  display: flex;
}
.list-item:last-child{
  border-bottom: 0;
}
.item-image{
  width: 90rpx;
  height: 120rpx;
}
.item-body{
  flex: 1;
  padding-left: 35rpx;
}
.item-title{
  width: 400rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.item-content{
  margin-top: 26rpx;
  font-size: 28rpx;
  color: #333333;
}
.item-content .text{
  display: inline-block;
  font-size: 24rpx;
  color: #AFAFAF;
}
.item-content .text:first-child{
  width: 120rpx;
}

.item-btn{
  width: 150rpx;
  height: 58rpx;
  line-height: 58rpx;
  font-size: 26rpx;
  color: #FFFFFF;
  text-align: center;
  background: #2AA8F4;
  border-radius: 29px;
}
