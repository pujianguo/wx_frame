@import '../../../styles/variables.wxss';

.page-footer{
  width: 100%;
  padding: 10rpx 0;
  color: var(--text-color-description);
  font-size: 24rpx;
}
.loading{
  display: flex;
  justify-content: center;
  align-items: center;
}
.loading-icon{
  width: 28rpx;
  height: 28rpx;
}
.loading-text{
  margin-left: 10rpx;
}
.no-more{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 50rpx;
}
.no-more-line{
  flex: 1;
  height: 1px;
  background-color: var(--color-border);
}
.no-more-text{
  padding: 0 50rpx;
}
