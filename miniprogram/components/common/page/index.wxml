<view class="page-footer" wx:if="{{isShowFooterLoading || isShowFooterNoMore}}">
  <view class="loading" wx:if="{{isShowFooterLoading}}">
    <image class="loading-icon" src="/images/icons/loading.png"></image>
    <text class="loading-text">正在加载</text>
  </view>
  <view class="no-more" wx:if="{{isShowFooterNoMore}}">
    <view class="no-more-line"></view>
    <text class="no-more-text">没有更多啦</text>
    <view class="no-more-line"></view>
  </view>
</view>
