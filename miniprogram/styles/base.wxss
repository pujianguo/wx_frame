view, scroll-view, swiper, swiper-item, button, input, textarea, label, navigator, image {
	box-sizing: border-box;
}

/* 普通page页 */
page {
  background-color: #FFFFFF;
  /* font-size: $font-size; */
  /* color: $text-color; */
  min-height: 100%;
  display: flex;
}
page>view{
  flex: 1;
  overflow-y: auto;
}

.kg-normal-btn{
  background-color: transparent;
  margin: 0;
  padding: 0;
  border: 0;
  border-radius: 0;
}
.kg-normal-btn::after {
  border: none;
}
