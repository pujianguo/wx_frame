.item{
  width: 100%;
  height: 100rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
.item:nth-child(2n){
  background: rgb(247 247 247);
}
.time{
  width: 100rpx;
  text-align: center;
}
.mini-type{
  width: 100rpx;
  text-align: center;
}
.vs{
  width: 60rpx;
  text-align: center;
  font-size: 24rpx;
}
.team{
  flex: 1;
  width: 0;
  padding: 0 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.team-a{
  text-align: right;
}
.team-b{
  text-align: left;
}
.link{
  text-align: center;
  width: 100rpx;
}
